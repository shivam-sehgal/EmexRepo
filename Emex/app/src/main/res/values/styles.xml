<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="my_font_style" parent="@android:style/Theme.Holo.Light">
        <item name="android:textSize">16sp</item>

    </style>

    <style name="my_toolbar_style" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/tool_Color</item>

    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/line_color</item>
    </style>

    <style name="toolbar_title" parent="@android:style/Theme.Holo.Light">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/tool_Color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="big_text" parent="@android:style/Theme.Holo.Light">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/big_text_color</item>
        </style>
    <style name="my_longtext_style" parent="@android:style/Theme.Holo.Light">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>

    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
