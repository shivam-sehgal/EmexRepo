<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="12dp"
    android:padding="10dp"
    android:weightSum="4"
    android:background="@drawable/viewgroup_border">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="11dp"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dodger_Blue"
                android:layout_alignParentRight="true"
                android:id="@+id/distance_tv"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date_tv"
                android:textColor="@color/dodger_Blue"

                android:layout_alignParentLeft="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:layout_below="@id/date_tv"
                android:background="@color/grey_color"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:id="@+id/my_address_space"

        android:layout_weight="2"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/green_oval"
                android:id="@+id/green_oval"
                />
            <View
                android:layout_width="1dp"
                android:layout_margin="10dp"
                android:layout_height="40dp"
                android:background="@color/black"
                android:id="@+id/black_connecting_line"
                android:layout_below="@id/green_oval"
                />
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/red_oval"
                android:layout_below="@id/black_connecting_line"
                android:id="@+id/red_oval"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adress_1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/green_oval"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adress_2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/red_oval"
                android:layout_centerVertical="true"

               />


        </RelativeLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Ride_time"
            android:textColor="@color/grey_color"
            android:layout_margin="5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:layout_below="@id/Ride_time"
            android:id="@+id/below_line"
            android:background="@color/grey_color"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/static_text"
                android:theme="@style/my_font_style"
                android:textColor="@color/dodger_Blue"
                android:layout_gravity="left"
                android:text="@string/total_amount"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/total_amount"
                android:theme="@style/my_font_style"
                android:textColor="@color/dodger_Blue"
                android:layout_gravity="right"
                />

        </LinearLayout>



    </LinearLayout>



    </LinearLayout>