<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:weightSum="2"
    tools:context="com.example.user.emex.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:id="@+id/gor_emx_img"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/image_setter"
            android:layout_weight="1"
            />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:id="@+id/logo_imgview"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"

        android:padding="20dp"
        android:weightSum="4">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>
    <Button
        android:layout_weight="1"
        android:layout_width="292dp"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:background="@drawable/login_button_shape"
        android:gravity="center"
        android:theme="@style/my_font_style"
        android:textColor="@color/white"
        android:text="@string/Login"
        android:id="@+id/login_btn" />
    <Button
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:layout_width="292dp"
        android:layout_height="45dp"
        android:textColor="@color/dodger_Blue"
        android:gravity="center"
        android:id="@+id/sighnup_btn"
        android:theme="@style/my_font_style"
        android:background="@drawable/signup_button_shape"
        android:text="@string/Sign"
        />

    </LinearLayout>

</LinearLayout>
